@using GastoEnergetico.ViewModel.Parametros
@model GastoEnergetico.ViewModel.Parametros.EditarViewModel

@{
    ViewData["Title"] = "Editar Parâmetro - #" + @Model.Id;
}
<h1>@ViewData["Title"]</h1>

<a href="/Parametros">Voltar</a>

<form action="/Parametros/Editar/@Model.Id" method="post" class="w-50">
    
    <div class="form-group row">
        <label for="ValorKwh" class="col-sm-2 col-form-label">Valor/Kwh</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ValorKwh" name="ValorKwh" value="@Model.ValorKwh">
        </div>
    </div>
    <div class="form-group row">
        <label for="FaixaConsumoAlto" class="col-sm-2 col-form-label">Faixa Consumo Alto</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FaixaConsumoAlto" name="FaixaConsumoAlto" value="@Model.FaixaConsumoAlto">
        </div>
    </div>
    <div class="form-group row">
        <label for="FaixaConsumoMedio" class="col-sm-2 col-form-label">Faixa Consumo Médio</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FaixaConsumoMedio" name="FaixaConsumoMedio" value="@Model.FaixaConsumoMedio">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
    
</form>