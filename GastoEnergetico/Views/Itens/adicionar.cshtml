

@{
    ViewData["Title"] = "Adicionar Item";
}
<h1>@ViewData["Title"]</h1>

<a href="/Itens">Voltar</a>

<form action="/Itens/Adicionar" method="post" class="w-50">
    
    <div class="form-group row">
        <label for="Nome" class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Nome">
        </div>
    </div>
    
    <div class="form-group row">
            <label for="ValorKwh" class="col-sm-2 col-form-label">Decrição</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Descrição">
            </div>
        </div>
    
    <div class="form-group row">
        <label for="DataFabricacao" class="col-sm-2 col-form-label">Data Fab</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="DataFabricacao" name="DataFabricacao">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="ConsumoWatts" class="col-sm-2 col-form-label">Consumo Watts</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ConsumoWatts" name="ConsumoWatts" placeholder="Consumo Watts">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="HorasUsoDiario" class="col-sm-2 col-form-label">Horas Uso Diário</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="HorasUsoDiario" name="HorasUsoDiario" placeholder="Horas Uso Diário">
        </div>
    </div>
    
     <div class="form-group row">
            <label for="Categoria" class="col-sm-2 col-form-label">Categoria Pertencente</label>
            <div class="col-sm-10">
              
                <select name="Categoria" id="Categoria">
                    <option value="1">A</option>
                    <option value="2">B</option>
                    <option value="3">C</option>
                </select>
                
            </div>
        </div>
    
    
    
  
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
    
</form>