@model GastoEnergetico.ViewModel.Home.IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Mapa de Gastos Energéticos</h1>
    <h3>Controle os seus gastos enérgeticos e diminua o valor da conta de luz.</h3>
</div>
<div class="d-flex justify-content-center mb-5">
    <div class="card" style="width: 30rem;">
      
        <div class="card-body">
            <h5 class="card-title">Total de consumo de energia em um mês..</h5>
            <p class="card-text">
            
                <table class="table table-hover table-dark table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Total gasto (Kw)</th>
                        <th scope="col">Valor Mensal</th>
                        <th scope="col">Faixa de consumo</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var consumoTotal in @Model.totalConsumos)
                    {
                        <tr>
                            <th scope="col">@consumoTotal.ConsumoMensalWatts</th>
                            <th scope="col">@consumoTotal.ValorMensalKwh</th>
                            <th scope="col">@consumoTotal.FaixaDeConsumo</th>
                        </tr>
                    }
                    
                    </tbody>
                </table>
            </p>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
<div class="card mr-5 bg-dark text-light" style="width: 25rem;">
  
    <div class="card-body">
        <h5 class="card-title">Categorias que mais consomem..</h5>
        <p class="card-text">
        
            <table class="table table-hover table-light">
                <thead>
                <tr>
                    <th scope="col">Posição</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Consumo Mensal (Kwh)</th>
                    <th scope="col">Valor Mensal</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var consumoCategoria in @Model.CategoriasQueMaisConsomem)
                {
                    <tr>
                        <th scope="col">@consumoCategoria.Posicao</th>
                        <th scope="col">@consumoCategoria.NomeCategoria</th>
                        <th scope="col">@consumoCategoria.ConsumoMensalKwh</th>
                        <th scope="col">@consumoCategoria.ValorMensalKwh</th>
                    </tr>
                }
                </tbody>
            </table>
        </p>
    </div>
</div>

<div class="card bg-dark text-light" style="width: 35rem;">
  
    <div class="card-body">
        <h5 class="card-title">Itens que mais consomem..</h5>
        <p class="card-text">
        
            <table class="table table-hover table-light">
                <thead>
                <tr>
                    <th scope="col">Posição</th>
                    <th scope="col">Item</th>
                    <th scope="col">Categoria a que pertence</th>
                    <th scope="col">Consumo Mensal (Kwh)</th>
                    <th scope="col">Valor Mensal</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var consumoItem in @Model.ItensQueMaisConsomem)
                                {
                                    <tr>
                                        <th scope="col">@consumoItem.Posicao</th>
                                        <th scope="col">@consumoItem.NomeItem</th>
                                        <th scope="col">@consumoItem.NomeCategoriaItem</th>
                                        <th scope="col">@consumoItem.ConsumoMensalKwh</th>
                                        <th scope="col">@consumoItem.ValorMensalKwh</th>
                                    </tr>
                                }
                </tbody>
            </table>
        </p>
    </div>
</div>
</div>